<Window x:Class="Beekeeper.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="300" ResizeMode="NoResize">
    <Grid>
        <TextBox x:Name="input_username" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="84,134,0,0" Text="Username" GotFocus="input_username_GotFocus" LostFocus="input_username_LostFocus" BorderBrush="#FF6B6B6B" Foreground="#FF898989"/>
        <PasswordBox x:Name="input_password" HorizontalAlignment="Left" Margin="84,172,0,0" VerticalAlignment="Top" Height="23" Width="120" GotFocus="input_password_GotFocus" Password="Password" LostFocus="input_password_LostFocus" BorderBrush="#FF6B6B6B" Foreground="#FF898989"/>
        <Button Content="Log In" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="84,210,0,0" Height="26" Click="Button_Click_1"/>
        <Label Content=" Hivemind" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="48" FontWeight="Bold" Width="272"/>
        <Label Content="Admin controls" HorizontalAlignment="Left" Margin="55,78,0,0" VerticalAlignment="Top" FontSize="22" FontWeight="Bold"/>

    </Grid>
</Window>
